{
  "name": "stream-notifier",
  "version": "1.1.1",
  "module": "src/main.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "bun --smol run src/main.ts",
    "dev": "bun --watch run src/main.ts",
    "build": "bun run scripts/build.ts",
    "build:win": "bun run scripts/build.ts win",
    "build:linux": "bun run scripts/build.ts linux",
    "build:mac": "bun run scripts/build.ts mac",
    "build:all": "bun run scripts/build.ts all",
    "lint": "biome lint .",
    "typecheck": "tsc --noEmit",
    "format": "biome check --write --unsafe ."
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@types/bun": "^1.3.9"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "zod": "^4.3.6"
  }
}
